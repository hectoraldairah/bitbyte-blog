<div id="pixelart-list">
  <div class="[ wrapper ] [ flow ]">
    <ul class="[ pixelart-grid ]">
      {% for item in pixelArtItems %}
      {% set pixelArtImageUrl = ["/pixelart/", item.data.dir, "/", item.data.image] | join %}
      <li class="[ pixelart-list ]">
      <article class="[ pixelart-card ]">
      {% image pixelArtImageUrl, "alt text" %}
        <a href="{{ item.url }}">{{item.data.title}}</a>
      </article>
      </li>
      {% endfor %}
    </ul>
  </div>
</div>
