<section class="[ feature-post ]">
  <div class="[ wrapper ]">
    <h3 class="feature-post__title">Featured Articles</h3>
    <div class="feature-post__list">
      {% for item in postItems %}
      <article class="featured-article">
        <a href="{{ item.url }}" class="[ featured-article__title ]"
          >{{item.data.title}}</a
        >
        <p class="featured-article__clamp">
          <span class="featured-article__meta">
            <time
              class="featured-article__date"
              datetime="{{ item.data.date | postDate }}"
              >{{ item.data.date | postDate }}</time
            >
            ::
            {% for tag in item.data.tags %}
            <a
              class="featured-article__meta__tags"
              href="/tag/{{ tag | slug }}/"
              >{{ tag }}</a
            >
            {% endfor %}
          </span>
          {{item.data.description }}
        </p>
      </article>
      {% endfor %}
    </div>

    <a class="feature-post__more" href="/blog">See more articles</a>
  </div>
</section>
